{
  "compilerOptions": {
    "resolveJsonModule": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "noImplicitAny": false,
    "noEmitHelpers": false,
    "declaration": false,
    "strict": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "lib": [
      "es2015",
      "dom",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": ["src", "config"]
}
